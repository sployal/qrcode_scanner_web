{
  "manifest_version": 3,
  "name": "QR Code Scanner",
  "version": "1.0",
  "description": "Scan QR codes on any webpage using Ctrl+F7",
  "permissions": ["activeTab", "tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": []
    }
  ],
  "background": { "service_worker": "background.js" },

  "commands": {
    "scan-qr": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Activate QR code scanner"
    }
  }
}